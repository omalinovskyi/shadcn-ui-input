{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "removeComments": true,
    "incremental": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@helpers/*": ["src/helpers/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lang/*": ["src/lang/*"],
      "@lib/*": ["src/lib/*"],
      "@providers/*": ["src/providers/*"],
      "@queries/*": ["src/queries/*"],
      "@routes/*": ["src/routes/*"],
      "@typings/*": ["src/typings/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/styles/*"],
      "@styles/*": ["src/styles/*"],
      "@theme/*": ["src/theme/*"],
      "@views/*": ["src/views/*"]
    },
    "target": "ES2017",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/i18n.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
